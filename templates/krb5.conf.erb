[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= krb5realm %>
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 forwardable = yes

[realms]
 <%= krb5realm %> = {
  kdc = <%= kdc %>
 }

[domain_realm]
 <%= dnsdomain %> = <%= krb5realm %>
# spence.org.uk.vm = SPENCE.ORG.UK.VM
 .<%= dnsdomain %> = <%= krb5realm %>

[appdefaults]
 pam = {
   debug = false
   ticket_lifetime = 36000
   renew_lifetime = 36000
   forwardable = true
   krb4_convert = false
 }
